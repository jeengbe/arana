{
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2016",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["./core/*"],
      "@Schwekas/pool/*": ["./modules/@Schwekas/pool/*"],
      "@modules/*": ["./modules/*"]
    },
    "experimentalDecorators": true,
  },
  "include": [
    "modules/*/*/types/**/*.d.ts",
    "modules/*/*/database/types.d.ts",
    "modules/*/*/api/**/*.ts",
    "core/*"
  ]
}
